<h1>Edit Your Review for <%= @review.book.title %></h1>

<%= form_with model: @review, local: true do |form| %>
  <% if @review.errors.any? %>
    <div class="errors">
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..5, step: 1, value: @review.rating, required: true %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 4, required: true %>
  </div>

  <%= form.submit 'Update Review' %>
<% end %>
