<div class="flex flex-col mx-auto">
    <h1 class="text-3xl font-bold mb-6">New Book</h1>

<%= form_with(model: @book, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :title, class: 'block text-lg font-semibold text-gray-700' %>
    <%= form.text_field :title, required: true, class: 'mt-1 block w-full border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50' %>
  </div>

  <div class="mb-4">
    <%= form.label :author, class: 'block text-lg font-semibold text-gray-700' %>
    <%= form.text_field :author, required: true, class: 'mt-1 block w-full border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50' %>
  </div>

  <div class="mb-4">
    <%= form.label :isbn, class: 'block text-lg font-semibold text-gray-700' %>
    <%= form.text_field :isbn, required: true, class: 'mt-1 block w-full border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50' %>
  </div>

  <div class="mb-4">
    <%= form.label :publication_year, class: 'block text-lg font-semibold text-gray-700' %>
    <%= form.number_field :publication_year, class: 'mt-1 block w-full border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50' %>
  </div>

  <%= form.submit 'Create Book', class: 'mt-4 bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300' %>
<% end %>

</div>