<div class="flex flex-col mx-auto">
    <h1 class="text-3xl font-bold mb-4"><%= @book.title %> by <%= @book.author %></h1>

<div class="mb-6">
  <p class="text-lg text-gray-700"><strong>Publication Year:</strong> <%= @book.publication_year %></p>
  <p class="text-lg text-gray-700"><strong>ISBN:</strong> <%= @book.isbn %></p>
</div>

<h2 class="text-2xl font-semibold mb-4">Reviews</h2>

<%= render 'reviews/form', book: @book %>

<%= cache @book do %>
  <% @book.reviews.each do |review| %>
    <div class="border-b border-gray-300 pb-4 mb-4">
        <p class="text-xl font-semibold text-yellow-500">
        <%= review.rating %> Stars
        </p>
        <p class="text-gray-700"><%= review.content %></p>
    </div>
    <% end %>
<% end %>


<%= link_to 'Back to Books', books_path, class: 'text-blue-500 hover:underline mt-4 inline-block' %>

</div>